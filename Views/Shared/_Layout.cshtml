
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>
<body>
    <ul  class="nav justify-content-center">
        <li class="nav-item">
            <a style="color:black ; font-size: 40px" class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
        </li>
        <li class="nav-item">
            <a style="color:black; font-size: 40px" class="nav-link" asp-action="Services" asp-controller="Home">Services</a>
        </li>
        <li class="nav-item">
            <a style="color:black ; font-size: 40px" class="nav-link" asp-action="AllAppointments" asp-controller="Home">
                Appointments
            </a>
        </li>
        <li class="nav-item">
            <a style="color:black ; font-size: 40px" class="nav-link" asp-action="AboutUs" asp-controller="Home">
                About Us
            </a>
        </li>

        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a style="color:black ; font-size: 40px" class="nav-link" asp-action="Logout" asp-controller="Account"> Logout </a>
               
            </li> 
        }
        else
        {
            <li class="nav-item">
                <a style="color:black ; font-size: 40px" class="nav-link" href="/Account/Login">
                    Login
                </a>

            </li>
        }
    </ul>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    @RenderBody();
</body>
</html>
